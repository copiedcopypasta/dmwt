datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String       @id @default(uuid())
  discord_user_id  BigInt?
  discord_user     DiscordUser? @relation(fields: [discord_user_id], references: [id], onDelete: SetNull)
  created_at       DateTime     @default(now())
  role             Role         @default(USER)
  locale           Locale       @default(EN)
  feedback         Feedback[]
  ratings          Rating[]
  settings         Settings?
  user_level       UserLevel?
}

model DiscordUser {
  id           BigInt  @id
  username     String
  accent_color Int?
  nickname     String
  avatar_hash  String?
  locale       Locale
  verified     Boolean @default(false)
  users        User[]
}

model UserLevel {
  id               String  @id @default(uuid())
  user_id          String  @unique
  current_quest    Int     @default(0)
  completed_quests Int[]   @default([0])
  finished         Boolean @default(false)
  user             User    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  quests           Quest[]
}

model Quest {
  id            String    @id @default(uuid())
  level         Int
  user_level_id String
  title         String
  description   String
  user_level    UserLevel @relation(fields: [user_level_id], references: [id], onDelete: Cascade)
}

model Feedback {
  id      String @id @default(uuid())
  user_id String
  context String @default("")
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Rating {
  id      String  @id @default(uuid())
  user_id String
  context String?
  site    Site
  score   Int     @default(1)
  user    User    @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Settings {
  id      String @id @default(uuid())
  user_id String @unique
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

enum Role {
  USER
  ADMIN
}

enum Site {
  SITE_1_PLACEHOLDER
  SITE_2_PLACEHOLDER
  SITE_3_PLACEHOLDER
  SITE_4_PLACEHOLDER
  SITE_5_PLACEHOLDER
}

enum Locale {
  EN
  DE
}
