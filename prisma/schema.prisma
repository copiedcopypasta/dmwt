datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String       @id @default(uuid())
  discord_user_id  BigInt?
  discord_user     DiscordUser? @relation(fields: [discord_user_id], references: [id], onDelete: SetNull)
  created_at       DateTime     @default(now())
  role             Role         @default(USER)
  locale           Locale       @default(EN)
  feedback         Feedback[]
  ratings          Rating[]
  settings         Settings?
  user_level       UserLevel?
}

model DiscordUser {
  id           BigInt  @id
  username     String
  accent_color Int?
  nickname     String
  avatar_hash  String?
  locale       Locale
  verified     Boolean @default(false)
  users        User[]
}

